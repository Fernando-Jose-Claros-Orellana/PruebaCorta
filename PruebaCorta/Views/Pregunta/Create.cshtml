@model PreguntaM

<h2>Crear Pregunta</h2>

<form asp-action="Create" method="post">
    <div class="form-group col-md-6">
        <label asp-for="Pregunta"></label>
        <textarea name="variableVista" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Pregunta" class="text-danger"></span>
    </div>
    <div class=" mt-3">
        <div class="d-inline-block">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
        <div class="d-inline-block ml-2">
            <a href="@Url.Action("Index", "Pregunta")" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}