@model Usuario
@{
    Layout = "_Login";
}
<h2>Crear Usuario</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="form-group col-md-6">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div >
    <div class=" mt-3" >
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>
   
</form>

<div class="mt-3">
    <p>¿Ya tienes una cuenta? <a asp-controller="Usuario" asp-action="Login" class="btn btn-secondary">Hacer Inicio de Sesion</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}